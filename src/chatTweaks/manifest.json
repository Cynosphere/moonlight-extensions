{
  "$schema": "https://moonlight-mod.github.io/manifest.schema.json",
  "id": "chatTweaks",
  "version": "1.0.1",
  "meta": {
    "name": "Chat Tweaks",
    "tagline": "Various tweaks to chatting. Every feature togglable.",
    "authors": [
      "Cynosphere",
      "Jane Shimmer"
    ],
    "tags": [
      "qol",
      "chat"
    ],
    "source": "https://github.com/Cynosphere/moonlight-extensions"
  },
  "dependencies": [
    "spacepack",
    "common"
  ],
  "settings": {
    "noReplyPing": {
      "displayName": "Disable Reply Mention",
      "description": "When replying to messages, automatically turn off mentioning the original poster.",
      "type": "boolean",
      "default": true
    },
    "noReplyChainNag": {
      "displayName": "Disable reply chain nag",
      "description": "Removes the extra bar of text when replying to a chain of replies over 4 messages.",
      "type": "boolean",
      "default": true
    },
    "appToBot": {
      "displayName": "App to Bot",
      "description": "Revert bot tags back to saying bot",
      "type": "boolean",
      "default": true
    },
    "webhookTag": {
      "displayName": "Webhook Tag",
      "type": "boolean",
      "default": true
    },
    "jumpToBlocked": {
      "displayName": "Allow jumping to blocked/ignored messages",
      "type": "boolean",
      "default": true
    },
    "hideBlocked": {
      "displayName": "Hide blocked messages completely",
      "type": "boolean",
      "default": false
    },
    "hideIgnored": {
      "displayName": "Hide ignored messages completely",
      "type": "boolean",
      "default": false
    },
    "alwaysShowOwnerCrown": {
      "displayName": "Always show owner crown",
      "type": "boolean",
      "default": true
    }
  },
  "apiLevel": 2
}
