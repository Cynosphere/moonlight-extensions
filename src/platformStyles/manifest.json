{
  "$schema": "https://moonlight-mod.github.io/manifest.schema.json",
  "id": "platformStyles",
  "version": "1.0.2",
  "meta": {
    "name": "Platform Styles",
    "tagline": "Change the window border appearance to another operating system's style.",
    "authors": ["Cynosphere", "adryd"],
    "tags": ["appearance"],
    "source": "https://github.com/Cynosphere/moonlight-extensions",
    "changelog": "Support for Visual Refresh"
  },
  "environment": "desktop",
  "settings": {
    "style": {
      "displayName": "Style",
      "description": "Use `linux` for system window border",
      "type": "select",
      "default": "default",
      "options": ["default", "win", "osx", "linux", "web"],
      "advice": "restart"
    }
  },
  "apiLevel": 2
}
